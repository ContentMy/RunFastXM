<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--选中的样式，可以设置选择的字体颜色，这里只是为了改变选择时的字体大小-->
    <style name="ui_bottom_nav_title_active">
        <item name="android:textSize">@dimen/ui_sp_12</item>
    </style>

    <!--没有选中的样式，导航默认的字体大小就是12sp-->
    <style name="ui_bottom_nav_title_inactive">
    <item name="android:textSize">@dimen/ui_sp_10</item>
    </style>

    <style name="ui_DialogBaseActivityTheme" parent="Theme.AppCompat.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ui_BottomDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="ui_BottomDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/ui_slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/ui_slide_in_bottom</item>
    </style>

    <style name="ui_ActivityDialogAlphaAnimation">
        <item name="android:windowEnterAnimation">@anim/ui_alpha_show</item>
        <item name="android:windowExitAnimation">@anim/ui_alpha_hide</item>
    </style>
</resources>